<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.allaykhalil.apicallingwithcoroutinesandhilt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AppClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApiCallingWithCoroutinesAndHilt">
        <activity
            android:name=".ui.dashboard.DashBoard"
            android:exported="true"
            android:label="Dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.currencyChanger.CurrencyChangerDashboard"
            android:exported="false"
            android:label="Currency Changer" />

        <activity
            android:name=".ui.historicalData.HistoryActivity"
            android:exported="false"
            android:label="History" />
        <activity
            android:name=".ui.popularCurrencies.PopularCurrencyDashboard"
            android:exported="false"
            android:label="Popular Currency" />


    </application>

</manifest>